        <meta-data
            android:name="io.sugo.android.SGConfig.APIHost"
            android:value="http://192.168.0.220:8000" />

        <!-- 设置可视化埋点地址 -->
        <meta-data
            android:name="io.sugo.android.SGConfig.EditorHost"
            android:value="ws://192.168.0.220:8887" />

