<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fafafa">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="原生埋点"
            android:textColor="#333333"
            android:textSize="16sp" />

    </RelativeLayout>

    <View style="@style/SmallLine" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="12dp"
                android:text="文本测试"
                android:textSize="16sp" />

            <View style="@style/SmallLine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="12dp"
                android:text="按钮测试"
                android:textSize="16sp" />

            <View style="@style/SmallLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <Button
                    android:id="@+id/a_btn"
                    android:layout_width="200dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_btn_circle"
                    android:text="登录"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/b_btn"
                    android:layout_width="200dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:background="@drawable/bg_btn_circle_red"
                    android:text="登出"
                    android:textColor="#ffffff" />


                <View style="@style/SmallLine" />

                <Button
                    android:id="@+id/to_fragments_btn"
                    android:layout_width="200dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_btn_circle_red"
                    android:text="去 Fragment 测试页面"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/to_list_btn"
                    android:layout_width="200dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_btn_circle_red"
                    android:text="去 list 测试页面"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/to_scroller_btn"
                    android:layout_width="200dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_btn_circle_red"
                    android:text="去 ScrollView 测试页面"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/to_view_pager_btn"
                    android:layout_width="200dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_btn_circle_red"
                    android:text="去 View Pager 测试页面"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="12dp"
                android:text="输入框测试"
                android:textSize="16sp" />

            <View style="@style/SmallLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/a_edit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:hint="输入 userId" />

                <EditText
                    android:id="@+id/b_edit"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:hint="输入框 B" />

            </LinearLayout>

            <View style="@style/SmallLine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="12dp"
                android:text="聚焦测试"
                android:textSize="16sp" />

            <View style="@style/SmallLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <SeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:progress="50" />

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/compat_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:progress="50" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="12dp"
                android:text="聚焦测试"
                android:textSize="16sp" />

            <View style="@style/SmallLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/a_swt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/b_swt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
